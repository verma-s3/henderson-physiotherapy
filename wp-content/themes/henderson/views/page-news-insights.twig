{% import './components/image.twig' as Image %}
{% import './components/button.twig' as Button %}
{% extends "base.twig" %} 

{% block content %}
    <section class="{{field.slug}}-page padding" id="{{field.slug}}-page">
			<div class="container">
				<div class="filters" data-aos="fade-zoom-in" data-aos-easing="ease-in-back">
					{{fn('do_shortcode','[searchandfilter query="1" field="news_type"]')}}
				</div>
				<div class="filter-results container-top" data-aos="fade-zoom-in" data-aos-easing="ease-in-back">
					{{fn('do_shortcode','[searchandfilter query="1" action="show-results"]')}}
				</div>
				<div class="load-more-btn" data-aos="fade-zoom-in" data-aos-easing="ease-in-back">
				    {{fn('do_shortcode','[searchandfilter query="1" field="load_more"]')}}					
				</div>
			</div>
    </section>

{% endblock %}